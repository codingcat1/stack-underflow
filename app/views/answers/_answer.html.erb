<blockquote id="answer_<%= answer.id %>">
  <font size="2"><%= "#{answer.description}" %></font>
  <footer> answered by <strong><%= "#{answer.user.user_name}" %></strong> @ <%= "#{answer.created_at.strftime("%d %b. %Y, %H:%M")}" %></footer>
  <font size="1"><%= link_to "(remove)", question_answer_path(@question, answer), method: :delete, data: {confirm: "Are you sure?"}, id: "remove_a", remote: true %></font>
</blockquote>
