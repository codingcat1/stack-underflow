<% content_for(:title, "Stack Underflow") %>


<h1 class="text-center">Stack Underflow</h3>

<pre><p id="description"> <%= @question.description %> </p></pre>


<div class="list-group" id="answers">
  <% @question.answers.each do |answer| %>
    <p class="list-group-item" id="answer_<%= answer.id %>">
    <%= "#{answer.description}" %> answered by
    <%= "#{answer.user.user_name}" %></p>
  <% end %>
</div>



<div class="list-group">
  <% if current_user %>
    <%= link_to "Reply", new_question_answer_path(@question), :class => "btn btn-success btn-lg", id: "reply_to_q", remote: true %>
  <% end %>
</div>

<%= link_to "Back to Stack Underflow Questions", questions_path %>
